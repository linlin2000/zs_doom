.navigation {
  position: fixed;
  top: 100rpx;
  z-index: 1;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content: center
}
.section {
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  background-color: #fff;
  padding: 14rpx 20rpx;
}
.section input {
  width: 710rpx;
  height: 60rpx;
  border: 1rpx solid #ccc;
  box-sizing: border-box;
  border-radius: 30rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
  background-color: #f2f2f2;
}
.navigation map {
  width: 100%;
  height: 100%;
}
.navigation .navigation_bott {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 60rpx;
  box-sizing: border-box;
}
.navigation .navigation_bott .navigation_fl,
.navigation .navigation_bott .navigation_fr {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #5c8fff;
  text-align: center;
  border-radius: 10rpx;
  color: #fff;
}