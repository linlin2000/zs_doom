
.particulars {
  background-color: #ccc;
}
.particulars .banner {
  height: 375rpx;
}
.particulars .banner image {
  width: 100%;
  height: 100%;
}
.particulars .centre {
  padding: 20rpx;
  padding-bottom: 0;
  background-color: #fff;
}
.particulars .centre .particulars_hed {
  height: 66rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #333;
}
.particulars .centre .particulars_hed .partfs {
  margin-left: 16rpx;
  font-size: 24rpx;
}
.particulars .centre .centre_ge {
  height: 97rpx;
  line-height: 97rpx;
  padding: 0 30rpx 0 0;
  font-size: 28rpx;
  border-top: 1rpx solid #ccc;
  box-sizing: border-box;
}
.particulars .centre .centre_ge .centre_le {
  float: left;
  color: #333;
}
.particulars .centre .centre_ge .centre_re {
  float: right;
  color: #999;
}
.particulars .particulars_middle {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}
.particulars .particulars_middle .information_text {
  margin: 20rpx 0;
  font-size: 30rpx;
}
.particulars .particulars_middle .information_img {
  height: 355rpx;
  padding: 15rpx 0;
}
.particulars .particulars_middle .information_img image {
  width: 100%;
  height: 100%;
  display: block;
}
.particulars .information {
  border-bottom: 1rpx solid #ccc;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 34rpx;
}
.particulars .recommend {
  background-color: #fff;
  margin-top: 30rpx;
  padding: 20rpx 5rpx;
  padding-top: 0;
  box-sizing: border-box;
}
.particulars .recommend .information {
  margin: 0 15rpx;
}
.particulars .recommend .product_img {
  position: relative;
  width: 340rpx;
  height: 340rpx;
  padding: 0 15rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  display: inline-block;
}
.particulars .recommend .product_img image {
  width: 100%;
  height: 100%;
  display: block;
}
.particulars .recommend .product_img .product_text {
  position: absolute;
  left: 40rpx;
  bottom: 20rpx;
  font-size: 28rpx;
  color: #ffffff;
}